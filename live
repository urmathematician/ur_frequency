    <script src="script.js">
        
        
    </script>
    
    <script>document.addEventListener("DOMContentLoaded", function () {
    const videoGrid = document.getElementById('video-grid');
    const popupModal = document.getElementById('popup-modal');
    const popupVideo = document.getElementById('popup-video');
    const closeModal = document.getElementById('close-modal');

    // WebSocket or HTTP request to get the video feed URLs
    let videoFeeds = [
        'video-feed-1-url',
        'video-feed-2-url',
        'video-feed-3-url' // Dynamically populated from server
    ];

    // Function to add videos to the grid
    function addVideoFeeds(feeds) {
        feeds.forEach(feed => {
            const videoElement = document.createElement('video');
            videoElement.src = feed;
            videoElement.controls = true;
            videoElement.onclick = function () {
                openPopup(feed);
            };
            videoGrid.appendChild(videoElement);
        });
    }

    // Function to open popup
    function openPopup(feed) {
        popupVideo.src = feed;
        popupModal.style.display = 'flex';
    }

    // Close modal when X is clicked
    closeModal.onclick = function () {
        popupModal.style.display = 'none';
        popupVideo.src = ''; // Stop video
    };

    // Add video feeds to the grid
    addVideoFeeds(videoFeeds);
});
</script>

<script>
   
document.querySelector('.menu-icon').addEventListener('click', function() {
    document.querySelector('.nav-menu').classList.toggle('open');
});


